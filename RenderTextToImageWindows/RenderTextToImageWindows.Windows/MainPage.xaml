    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RenderTextToImageWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="btnCreateButton" Content="Create Image" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="31,254,0,0" Height="51" Width="187" FontSize="22" Click="btnCreateButton_Click" />
        <TextBox x:Name="tbxImageText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="34,65,0,0" Height="164" Width="933" AcceptsReturn="True" Text="Default Image Text"/>
        <Image x:Name="imgCreated" HorizontalAlignment="Left" Margin="45,331,0,0" VerticalAlignment="Top" Width="1000" Height="1000"/>

    </Grid>
</Page>
